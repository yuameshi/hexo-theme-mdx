&.modern {
	background-color #f2f2f2
	padding 25px 0
	height 100px
	display flex
	flex-direction column
	align-items center
	justify-content center
	div.footerUpperLayer{
		display flex
		width 100%
		max-width 700px
		flex-direction row
		justify-content flex-start
		align-items center
		div.title{
			font-size 2.5rem
			font-weight bold
			margin-right .5rem
			a{
				text-decoration none
			}
		}
		div.detail{
			display flex
			flex-direction column
			justify-content space-between
			height 2.5rem
			div.text{
				display inline-flex
				div.contact a{
					text-decoration none
				}
			}
		}
	}
	div.footerLowerLayer{
		width 100%
		max-width 700px
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		div.left,
		div.right{
			a{
				text-decoration none
			}
		}
	}
}
@media screen and (max-width: 480px) {
	footer.footer.modern {
		padding 25px 10px
		div.footerUpperLayer,
		div.footerLowerLayer{
			flex-direction column
			text-align center
		}
	}
}