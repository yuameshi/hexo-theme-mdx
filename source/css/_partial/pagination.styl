div.pagination{
	margin 25px 0
	width 100%;
	display flex
	justify-content center
	align-items center
	*{
		height 35px
		width 35px
		margin 10px
		border-radius 999px
		display flex
		justify-content center
		align-items center
		transition all .3s ease
	}
	span.current{
		margin-right: 10px
	}
	a.page-number,
	a.extend{
		color #000
		text-decoration none
		&:hover{
			background rgba(0,0,0,.2)
		}
	}
}